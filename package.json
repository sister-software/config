{
  "name": "@sister.software/config",
  "version": "2.0.1",
  "repository": "git@github.com:sister-software/eslint-config.git",
  "description": "Sister Software's linter configurations.",
  "author": "teffen@sister.software",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint",
    "release": "release-it"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@sister.software/prettier-config/mod.cjs",
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config/mod.cjs"
    ]
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.57",
    "@typescript-eslint/parser": ">=5.57",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": ">=2.8",
    "prettier-plugin-organize-imports": "^3.2",
    "release-it": "^15.9.3",
    "stylelint": ">=15.3",
    "typescript": ">=5"
  },
  "engines": {
    "node": ">=16.14"
  },
  "packageManager": "yarn@3.3.1",
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": true
    },
    "npm": false
  }
}
